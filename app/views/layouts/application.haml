  = render partial: 'layouts/header'
  %body
    .page
      - if devise_view?
        = render partial: 'layouts/devise'
      - else
        = render partial: 'pages/body_content'

    = yield :javascript


    - content_for?(:footer) ? yield(:footer) : render(:partial => 'pages/footer')
