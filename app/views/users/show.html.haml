.profile
  .user-tasks
    .refine
      %ul
        %li
          %h3
            = link_to 'Submitted', user_path(@user, tab: 'submitted-tasks'), class: generate_class('submitted-tasks')
        %li
          %h3
            = link_to 'Completed', user_path(@user, tab: 'recent-help'), class: generate_class('recent-help')
    .content
      - if @recent_tasks
        = render partial: 'tasks/feed_summary', collection: @recent_tasks, locals: {gravatar_size: '80'}


  .profile-info
    %p
      %b
        = @user.name
    %p
      %b
        = @user.points
        awesome points
    - if user_signed_in? && current_user.id == @user.id
      .edit
        = link_to 'Edit Settings', edit_user_path(@user)
    .feedback-entries
      %h1.year.medium-padding
        User feedback:
      = render partial: 'users/feedback', collection: @user.feedback
